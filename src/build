#!/bin/sh
cd "$(dirname "$0")" || exit
./setup || exit
mkdir -p ../jstr
update_if_needed()
{
	in_fname=$1
	out_fname=../jstr/$in_fname
	test -e "$out_fname" &&
		test "$in_fname" -ot "$out_fname" && exit 0
	if expr "$in_fname" : '^_' >/dev/null; then
		cp -f "$in_fname" "$out_fname"
	else
		perl ./gen-func.pl "$in_fname" >"$out_fname"
	fi
	echo "Built $in_fname."
}
for file in $(echo *.h); do
	update_if_needed "$file" &
done
wait
{
	echo '#include "../jstr/jstr.h"'
	echo 'int main() { return 0; }'
} | cc -x c -o /tmp/__jstr_tmp_obj__ - || exit
rm /tmp/__jstr_tmp_obj__

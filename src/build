#!/bin/sh
cd "$(dirname "$0")" || exit
./setup || exit
mkdir -p ../jstr
update_if_needed()
{
	in_fname=$1
	out_fname=../jstr/$in_fname
	test -e "$out_fname" &&
		test "$in_fname" -ot "$out_fname" && exit 0
	if [ "$in_fname" = 'jstr-macros.h' ] || expr "$in_fname" : '^_' >/dev/null; then
		cp -f "$in_fname" "$out_fname"
	else
		perl ./gen-func.pl "$in_fname" >"$out_fname"
	fi
	echo "Built $in_fname."
}
for file in $(echo *.h); do
	update_if_needed "$file" &
done
wait
compile()
{
	cc -x c -o "$1" -
}
file_str='#include "../jstr/jstr.h"
int main() {return 0;}'
TMP=/tmp/__jstr_tmp_obj__
echo "$file_str" | compile "$TMP" || exit
file_str="#define __STRICT_ANSI__
$file_str"
echo "$file_str" | compile "$TMP" || exit
rm -f $TMP
